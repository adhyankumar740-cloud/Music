    <div id="jam-info" style="background: var(--glass); border: 1px solid var(--ios-pink); padding: 15px; border-radius: 20px; margin-bottom: 20px; display: none;">
        <div style="display:flex; justify-content:space-between; align-items:center;">
            <b id="active-room-text">ROOM: --</b>
            <button class="btn-mega" style="height:30px; padding:0 15px; background:#fff; color:#000;" onclick="leaveJam()">LEAVE</button>
        </div>
        <div id="jam-users-list" style="margin-top:10px;"></div>
    </div>

    <div id="jam-setup" style="display:flex; gap:12px; margin-bottom:30px;">
        <button class="btn-mega" style="flex:1; height:55px;" onclick="createJam()">CREATE JAM</button>
        <button class="btn-mega" style="flex:1; height:55px;" onclick="joinJam()">JOIN JAM</button>
    </div>

