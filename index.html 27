    <input id="sq" placeholder="Search song, artist..." style="width:100%; height:60px; background:var(--glass); border:1px solid var(--border); border-radius:20px; padding:0 20px; color:#fff; font-size:16px;" onkeyup="if(event.key==='Enter') startSearch()">
    <div id="search-results" style="margin-top:20px;"></div>
