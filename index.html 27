    <button class="btn-mega" style="width:45px; height:45px; align-self:flex-start;" onclick="togglePlayer(false)">▼</button>
    
    <img id="f-img" src="" style="width: 80vw; height: 80vw; max-width:320px; max-height:320px; margin: 30px 0; border-radius: 30px; object-fit: cover; box-shadow: 0 30px 60px rgba(0,0,0,0.8);">

    <div id="viz-container">
        <div class="bar" style="animation-delay: 0.1s"></div>
