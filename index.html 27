    <div>
        <h2 style="margin:0; font-size: 28px;">Pixel<span style="color:var(--ios-pink)">.</span></h2>
        <small id="room-id-tag" style="color:var(--ios-pink); font-weight:bold;"></small>
    </div>
    <div id="user-avatar" style="box-shadow: 0 0 15px var(--glow); border-radius: 50%;"></div>
