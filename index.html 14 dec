    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* --- General & Variables (Spotify Style) --- */
        :root {
            --primary-color: #1DB954; 
            --secondary-color: #282828; 
            --background-color: #121212; 
            --text-color: #ffffff;
            --muted-text-color: #b3b3b3;
            --control-color: #f1f1f1;
            --border-radius: 12px;
            --shadow-color: rgba(0, 0, 0, 0.8);
        }
        body {
            font-family: 'Poppins', sans-serif;
            padding: 0;
            background-color: var(--background-color);
            color: var(--text-color);
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }
        .container {
            width: 100%;
            max-width: 500px;
            padding: 20px 15px;
            box-sizing: border-box;
        }
        h1 { font-weight: 700; font-size: 1.5em; margin-bottom: 5px; }
        p { color: var(--muted-text-color); font-size: 0.9em; margin-bottom: 20px; }

        /* --- Search & Results --- */
        .search-container { display: flex; gap: 10px; margin-bottom: 20px; }
        #searchQuery { flex-grow: 1; padding: 12px 15px; border-radius: 8px; border: 1px solid #333; background: #222; color: var(--text-color); }
        #searchButton { padding: 12px 20px; border-radius: 8px; border: none; background-color: var(--primary-color); color: white; font-weight: 600; cursor: pointer; }
        #searchResults { max-height: 300px; overflow-y: auto; background: var(--secondary-color); border-radius: var(--border-radius); box-shadow: 0 4px 15px var(--shadow-color); }
        .search-item { padding: 12px 15px; display: flex; align-items: center; cursor: pointer; border-bottom: 1px solid #333; transition: background-color 0.15s; }
        .search-item:hover { background-color: #383838; }
        .search-item img { width: 55px; height: 55px; margin-right: 15px; border-radius: 6px; object-fit: cover; }
        .search-info strong { display: block; font-size: 1.1em; overflow: hidden; text-overflow: ellipsis; }
        .search-info small { color: var(--muted-text-color); font-size: 0.9em; }

        /* --- Player Section (Audio Only) --- */
        .player-area {
            margin-top: 30px; padding: 25px 15px;
            background: linear-gradient(135deg, #1f1f1f, #121212);
            border-radius: var(--border-radius);
            box-shadow: 0 10px 30px var(--shadow-color);
            text-align: center;
        }

        /* --- Now Playing Card --- */
        #nowPlayingCard { display: flex; flex-direction: column; align-items: center; margin-bottom: 20px; }
        #currentThumbnail {
            width: 80%; max-width: 250px; height: auto; aspect-ratio: 1 / 1;
            border-radius: 8px; object-fit: cover; box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
